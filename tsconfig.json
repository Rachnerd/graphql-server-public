{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "./node_modules"
  ]
}
